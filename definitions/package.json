{
  "name": "@ladesa-ro/especificacao",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "cleanup": "rimraf .generated",
    "build:json-schema": "pnpm run cleanup && tsp compile src/main.tsp --config tspconfig.jsonschema.yaml --output-dir '.generated'",
    "build": "pnpm run build:json-schema && pnpm run check:write",
    "format:check": "tsp format --check src/**/*.tsp && biome format .",
    "format:write": "tsp format src/**/*.tsp && biome format --write .",
    "lint:write": "biome lint --write .",
    "check": "pnpm run format:check",
    "check:write": "pnpm run format:write && pnpm run lint:write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@typespec/compiler": "latest",
    "@typespec/json-schema": "^0.59.0",
    "rimraf": "^6.0.1"
  },
  "packageManager": "pnpm@9.7.1+sha512.faf344af2d6ca65c4c5c8c2224ea77a81a5e8859cbc4e06b1511ddce2f0151512431dd19e6aff31f2c6a8f5f2aced9bd2273e1fed7dd4de1868984059d2c4247"
}
