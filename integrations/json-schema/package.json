{
  "name": "@ladesa-ro/especificacao-json-schema",
  "version": "v3.0.0-alpha.0",
  "private": true,
  "scripts": {
    "build": "wireit",
    "generate": "wireit"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "wireit": "^0.14.8"
  },
  "wireit": {
    "generate": {
      "command": "cp ../../definitions/.generated/json-schema/* -r ./lib",
      "files": ["../../definitions/.generated/json-schema/**/*"],
      "output": ["./lib/**/*"],
      "dependencies": ["../../definitions:build"]
    },
    "build": {
      "dependencies": ["generate"]
    }
  }
}
