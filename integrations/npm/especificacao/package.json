{
  "name": "@ladesa-ro/especificacao",
  "version": "v3.0.0-alpha.0",
  "scripts": {
    "build": "wireit",
    "generate": "wireit",

    "format:check": "wireit",
    "format:fix": "wireit",
    "lint:fix": "wireit",
    "code-static:check": "wireit",
    "code-static:fix": "wireit"
  },
  "devDependencies": {
    "quicktype": "^23.0.170"
  },
  "wireit": {
    "generate": {
      "command": "quicktype -s schema --just-types --no-combine-classes -o src/schemas.ts --src ../../json-schema/lib/*",
      "files": ["../../json-schema/lib/**/*"],
      "output": ["./src/schemas.ts"],
      "dependencies": ["../../json-schema:build"]
    },

    "build": {
      "dependencies": ["generate"]
    },

    "lint:check": {
      "command": "biome lint ."
    },
    "lint:fix": {
      "command": "biome lint --write ."
    },
    "format:check": {
      "command": "biome format ."
    },
    "format:fix": {
      "command": "biome format --write ."
    },
    "code-static:check": {
      "command": "pnpm run format:check"
    },
    "code-static:fix": {
      "command": "pnpm run format:fix && pnpm run lint:fix"
    }
  }
}
