{
	"name": "@ladesa-ro/especificacao",
	"version": "v3.0.0-alpha.0",
	"scripts": {
		"build": "wireit",
		"generate": "wireit"
	},
	"devDependencies": {
		"quicktype": "^23.0.170",
		"wireit": "^0.14.8"
	},
	"wireit": {
		"generate": {
			"command": "quicktype -s schema --just-types --no-combine-classes -o src/schemas.ts --src ../../json-schema/lib/*",
			"files": ["../../json-schema/lib/**/*"],
			"output": ["./src/schemas.ts"],
			"dependencies": ["../../json-schema:build"]
		},
		"build": {
			"dependencies": ["generate"]
		}
	}
}
