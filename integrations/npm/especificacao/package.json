{
  "name": "@ladesa-ro/especificacao",
  "version": "3.0.3",
  "scripts": {
    "build": "wireit",
    "generate": "wireit",
    "format:check": "wireit",
    "format:fix": "wireit",
    "lint:check": "wireit",
    "lint:fix": "wireit",
    "code-static:check": "wireit",
    "code-static:fix": "wireit"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "quicktype": "^23.0.170",
    "unbuild": "^2.0.0"
  },
  "wireit": {
    "generate": {
      "command": "quicktype -s schema --just-types --no-combine-classes -o src/schemas.ts --src ../../json-schema/lib/*",
      "files": [
        "../../json-schema/lib/**/*"
      ],
      "output": [
        "./src/schemas.ts"
      ],
      "dependencies": [
        "../../json-schema:build"
      ]
    },
    "build": {
      "command": "unbuild",
      "dependencies": [
        "generate"
      ],
      "files": [
        "./src/**/*"
      ],
      "output": [
        "./dist/**/*"
      ]
    },
    "lint:check": {
      "command": "biome lint ."
    },
    "lint:fix": {
      "command": "biome lint --write ."
    },
    "format:check": {
      "command": "biome format ."
    },
    "format:fix": {
      "command": "biome format --write ."
    },
    "code-static:check": {
      "command": "pnpm run lint:check && pnpm run format:check"
    },
    "code-static:fix": {
      "command": "pnpm run lint:fix && pnpm run format:fix"
    }
  }
}
