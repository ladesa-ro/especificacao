{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["esnext", "DOM"],
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "./dist",

    "incremental": true,
    "skipLibCheck": true
  }
}
