{
  "name": "@sisgea/spec",
  "version": "1.0.0-development.2",
  "main": "dist/index.js",
  "files": [
    "*.md",
    "proto/**/*.*",
    "dist/**/*.*"
  ],
  "scripts": {
    "format": "prettier --write --no-error-on-unmatched-pattern \"{src,apps,libs,test}/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
